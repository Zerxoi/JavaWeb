<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <listener>
    <listener-class>xyz.zerxoi.ServletContextListenerImpl</listener-class>
  </listener>

  <servlet>
    <servlet-name>servletA</servlet-name>
    <servlet-class>xyz.zerxoi.ServletA</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>servletB</servlet-name>
    <servlet-class>xyz.zerxoi.ServletB</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>redirection</servlet-name>
    <servlet-class>xyz.zerxoi.Redirection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletA</servlet-name>
    <url-pattern>/servletA</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>servletB</servlet-name>
    <url-pattern>/servletB</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>redirection</servlet-name>
    <url-pattern>/redirection</url-pattern>
  </servlet-mapping>
</web-app>
